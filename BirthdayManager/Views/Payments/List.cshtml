@model List<BirthdayManager.Core.Models.MoneyTransaction>

@{
    ViewBag.Title = "title";
}

<h2 class="payments-list-header"><i class="fa fa-dollar"></i> All Transactions</h2>

@Html.ActionLink("Create", "New", "Payments", null, new { @class = "btn btn-primary", style = "margin-bottom: 20px;" })

@if (!Model.Any())
{
    <p>We don't have any transaction recorded yet.</p>
}
else
{
    <table id="transactions" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>User</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Date</th>
            <th>Type</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var transaction in @Model)
        {
            <tr>
                <td>@transaction.Id </td>
                <td>@Html.ActionLink(transaction.ApplicationUser.GetFullname(), "Details", "Users", new { username = transaction.ApplicationUser.UserName }, null)</td>
                <td>@transaction.Amount </td>
                <td>@transaction.Description </td>
                <td>@transaction.Date </td>
                <td>@transaction.Type </td>
                <td><button class="btn-link js-delete" data-transaction-id="@transaction.Id">Delete</button></td>
            </tr>
        }
        </tbody>
    </table>
}



@section Scripts{
    <script>
        $(document).ready(function () {
            var table = $("#transactions").DataTable();


            $("#transactions").on("click",
                ".js-delete",
                function () {
                    var button = $(this);
                    bootbox.confirm("Are you sure you want to delete this transaction?",
                        function (result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/payments/" + button.attr("data-transaction-id"),
                                    method: "DELETE",
                                    success: function () {
                                        toastr.success("Payment was deleted.");
                                        table.row(button.parents("tr")).remove().draw();
                                    }
                                });
                            }
                        });
                });
        });
    </script>
}

