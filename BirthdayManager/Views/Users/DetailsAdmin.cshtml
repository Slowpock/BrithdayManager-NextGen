@model BirthdayManager.ViewModels.DetailsAdminViewModel

@{
    ViewBag.Title = "Details";
}

<h2 class="user-details-header"><i class="fa fa-user"></i> @Model.User.GetFullname()</h2>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-body">
                <ul>
                    <li>Username: @Model.User.UserName.ToLower()</li>
                    <li>First Name: @Model.User.FirstName</li>
                    <li>Last Name: @Model.User.LastName</li>
                    <li>Birthday: @Model.User.GetBirthdate()</li>
                    <li>Email: @Model.User.Email</li>
                    <li>Location: @Model.User.GetLocation()</li>
                    <li>Balance: @Model.User.Balance @if(@Model.ForecastBalance != Model.User.Balance){<b>(@Model.ForecastBalance)</b> }</li>
                </ul>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">      
        <div class="row">
            <div class="col-md-6">
                <h4>Current Subscriptions</h4>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Birthday Man</th>
                        <th>Birthday Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var subscription in @Model.Subscriptions)
                    {
                        <tr>
                            <td>@subscription.Arrangement.ApplicationUser.GetFullname()</td>
                            <td>@subscription.Arrangement.ApplicationUser.GetBirthdate()</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <h4>Recent Payments</h4>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var payment in @Model.Payments)
                    {
                        <tr>
                            <td>@payment.Date</td>
                            <td>@payment.Amount</td>
                            <td>@payment.Description</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

